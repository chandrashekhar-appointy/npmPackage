{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules",
    "dist"
  ]
} 